{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "package.json",
    // "../import/p911/common/dist/index.d.ts",
    // "../import/p911/client-web-api/dist/index.d.ts",
    "test/**/*.ts"
  ]
}
